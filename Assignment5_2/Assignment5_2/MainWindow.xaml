<Window x:Class="Assignment5_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="104" Margin="0,0,0,0" VerticalAlignment="Center" Width="362">
            <Button x:Name="Add_Data" Content="Add Person" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Height="104" Width="90" Click="Add_Data_Click"/>
            <Button x:Name="Show_People" Content="Show People" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" Height="104" Width="90" Click="Show_People_Click"/>
            <Button x:Name="Delete_Data" Content="Delete Person" HorizontalAlignment="Left" Margin="180,0,0,0" VerticalAlignment="Center" Height="104" Width="90" Click="Delete_Data_Click"/>
            <Button x:Name="Search_Data" Content="Search People" HorizontalAlignment="Left" Margin="270,0,0,0" VerticalAlignment="Center" Height="104" Width="90" Click="Search_Data_Click"/>
        </Grid>

    </Grid>
</Window>
