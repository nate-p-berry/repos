<Window x:Class="Assignment5_2.PersonGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5_2"
        mc:Ignorable="d"
        Title="PersonGrid" Height="450" Width="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=0}">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="First_Name" Header="First Name" Width="*" CanUserResize="False"/>
                <DataGridTextColumn x:Name="Last_Name" Header="Last Name" Width="*" CanUserResize="False"/>
                <DataGridTextColumn x:Name="Mobile_Phone" Header="Mobile Number" Width="*" CanUserResize="False"/>
                <DataGridTextColumn x:Name="Work_Phone" Header="Work Number" Width="*" CanUserResize="False"/>
                <DataGridTextColumn x:Name="Address" Header="Address" Width="2*" CanUserResize="False"/>
                <DataGridTextColumn/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
