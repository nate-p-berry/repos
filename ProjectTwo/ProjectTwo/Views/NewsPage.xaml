<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectTwo.Views.NewsPage"
             Title="News"
             x:DataType="ContentView">
    <Grid>
        <VerticalStackLayout>
            <Label 
            Text="Total results found: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontAutoScalingEnabled="True" FlowDirection="LeftToRight" />
            <Label 
            Text="{Binding Source=NewsPage.resultCount}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontAutoScalingEnabled="True"
            FlowDirection="LeftToRight" />
        </VerticalStackLayout>
        <ListView ItemsSource="{Binding }" />
        <!--<VerticalStackLayout>
            <ImageButton Source="{Binding Path=NewsPage.}"/>
            <Label Text="{Binding Source=articleTitle}"/>
            <Label Text="{Binding Source=articleDescription}"/>
        </VerticalStackLayout>-->
    </Grid>
</ContentPage>